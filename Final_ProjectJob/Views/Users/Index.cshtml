@model IEnumerable<Final_ProjectJob.AspNetUsers>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@foreach (var item in Model)
{
    <div class="container pt-5 pb-5">
        <div class="main-boby">
            <div class="row gutters-sm">
                <div class="col-md-4 mb-3">
                    <div class="card">
                        <div class="card-body">
                            <div class="d-flex flex-column align-items-center text-center">
                                <img src="https://bootdey.com/img/Content/avatar/avatar7.png" alt="UserPic" class="rounded-circle" width="150" />
                                <div class="mt-3">
                                    <h4 class="text-capitalize"> @Html.DisplayFor(modelItem => item.Name)</h4>
                                    <p class="text-secondary md-1"> @Html.DisplayFor(modelItem => item.Email)</p>
                                    <p class="text-muted font-size-sm text-capitalize">
                                        <i class="fas fa-map-marker-alt"></i>@Html.DisplayFor(modelItem => item.Country)
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-8">
                    <div class="card mb-3">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="md-0">Email</h6>
                                </div>
                                <div class="col-sm-9 text-secondary ">
                                    @Html.DisplayFor(modelItem => item.Email)
                                </div>
                            </div>
                            <hr />
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Name</h6>
                                </div>
                                <div class="col-sm-9 text-secondary text-capitalize">
                                    @Html.DisplayFor(modelItem => item.Name)
                                </div>
                            </div>
                            <hr />
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Mobile</h6>
                                </div>
                                <div class="col-sm-9 text-secondary text-capitalize">
                                    @Html.DisplayFor(modelItem => item.Mobile)
                                </div>
                            </div>
                            <hr />
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Address</h6>
                                </div>
                                <div class="col-sm-9 text-secondary text-capitalize">
                                    @Html.DisplayFor(modelItem => item.Address)
                                </div>
                            </div>
                            <hr />
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Resume</h6>
                                </div>
                                <div class="col-sm-9 text-secondary text-capitalize">
                                    @Html.DisplayFor(modelItem => item.Resume)
                                </div>
                            </div>
                            <hr />
                            <div class="header-btn d-none f-right d-lg-block">
                                <ul class="btn head-btn1">
                                    <li>@Html.ActionLink("Edit", "Edit", new { id = item.Id })</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
